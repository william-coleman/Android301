<?xml version="1.0" encoding="utf-8"?>
<com.week8.williamcoleman.peoplemongo.Views.ProfileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="User Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/show_username_field"
        android:textSize="24sp"
        android:textAlignment="center" />

    <ImageView
        android:id="@+id/avatar"
        android:padding="8dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/upload_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0"
        android:text="Load Picture" >
    </Button>

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:hint="Edit Name" />

    <Button
        android:id="@+id/name_button"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</com.week8.williamcoleman.peoplemongo.Views.ProfileView>