<?xml version="1.0" encoding="utf-8"?>
<com.week8.williamcoleman.peoplemongo.Views.CatchView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_menu_crop"
                android:id="@+id/imageView"
                android:layout_weight="0.30" />

            <TextView
                android:text="TextView"
                android:layout_height="wrap_content"
                android:layout_below="@+id/coordinatorLayout"
                android:layout_alignParentStart="true"
                android:layout_marginStart="15dp"
                android:id="@+id/id_textview"
                android:layout_weight="0.30"
                android:layout_width="wrap_content" />

            <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_textview"
                android:layout_weight="0.30" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:id="@+id/recycler_view"
            android:scrollbars="vertical"/>

    </android.support.design.widget.CoordinatorLayout>

</com.week8.williamcoleman.peoplemongo.Views.CatchView>